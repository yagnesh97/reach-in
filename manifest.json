{
  "manifest_version": 3,
  "name": "ReachIn",
  "version": "2.1.0",
  "description": "ReachIn is a Chrome extension that collects publicly available email addresses from LinkedIn search result pages.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["assets/js/content.js"]
    }
  ]
}