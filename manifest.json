{
  "manifest_version": 3,
  "name": "LinkedIn Email Collector",
  "version": "2.1.0",
  "description": "Collect emails from LinkedIn search results with advanced features",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["assets/js/content.js"]
    }
  ]
}